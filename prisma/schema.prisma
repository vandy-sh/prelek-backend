generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}


model User {
    user_id String @id
    name String 
    house_number Int
    roles String
    phone_number String?
    address String?

    @@index([user_id])
    @@index([name])
    @@index([house_number])
    @@index([phone_number])
    @@index([roles])
    @@map("users")
}